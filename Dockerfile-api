# syntax=docker/dockerfile:1

FROM fedora:39
USER root
RUN mkdir BASIL-API
WORKDIR /BASIL-API
COPY . /BASIL-API
RUN dnf install -y curl git python3 python3-pip podman rsync && \
    pip3 install --no-cache-dir -r requirements.txt

# Set the public ip in the api/api_url.py
ARG API_PORT=5000
ARG ADMIN_PASSWORD=admin
ENV BASIL_ADMIN_PASSWORD=$ADMIN_PASSWORD
ENV BASIL_API_PORT=$API_PORT

# Init the database and
# Write permission to db
RUN cd db/models && \
    python3 init_db.py && \
    chmod a+rw /BASIL-API/db

ENV BASIL_ADMIN_PASSWORD=

CMD cd api && gunicorn --access-logfile /var/tmp/tc-access.log --error-logfile /var/tmp/tc-error.log --bind 0.0.0.0:${BASIL_API_PORT} api:app